<?xml version='1.0' encoding='utf-8'?>
<widget id="com.typeorm.cordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>TypeORM-Example</name>
    <description>
        A simple app to test typeorm with cordova sqlite
    </description>
    <author email="ldaniell14260@gmail.com">
        Daniel Lang
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-sqlite-storage" spec="^2.4.0" />
    <engine name="android" spec="^7.1.1" />
    <engine name="ios" spec="^4.4.0" />
</widget>
